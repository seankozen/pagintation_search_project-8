extends layout

block content 
    h1= title
    p
      a(class='button' href="/books/new") Create New Book
    
    include searchBox

    table
      thead
        tr
          th Title
          th Author
          th Genre
          th Year
        each book in books
            tr 
                td 
                  a(href= "/books/" + book.id) #{book.title}  
                td= book.author 
                td= book.genre 
                td= book.year 
    
    ul.pagination
      while links <= pageCount
        li
        a(class='button' href=`/books/?page=${links}`)= links++
